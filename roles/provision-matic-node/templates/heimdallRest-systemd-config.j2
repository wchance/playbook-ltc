[Unit]
  Description=heimdalld-rest-server.service
  StartLimitIntervalSec=500
  StartLimitBurst=5

[Service]
  Restart=on-failure
  RestartSec=5s
  WorkingDirectory=~/
  ExecStart=~/go/bin/heimdalld rest-server --home=/home/{{ ansible_user }}/.heimdall_data
  Type=simple
  User=root

[Install]
  WantedBy=multi-user.target
