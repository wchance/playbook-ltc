server {
    listen 80;
    server_name sjo.gw.xhain.io;
    return 301 https://sjo.gw.xhain.io$request_uri;
}


server {
    listen 443 ssl;
    server_name sjo.gw.xhain.io;
    keepalive_timeout 70;

    ssl_certificate  /etc/nginx/ssl/ssl-cert-sjo-gw.crt;
    ssl_certificate_key /etc/nginx/ssl/private/ssl-cert-sjo-gw.key;

    location /ws/btc {

        allow 132.148.135.151/32;
        allow 23.161.96.0/24;
        allow 190.194.199.64/28;
        deny all;

        auth_basic "Restricted Endpoint";
        auth_basic_user_file /etc/htconfig/btc_htpasswd;

        rewrite /ws/btc/(.*) /$1  break;
        proxy_redirect off;
        proxy_pass http://sjo-btc-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
        proxy_read_timeout 999999999;
    }

