upstream mia-btc-node {
    least_conn;
    server 10.0.41.23:50003 fail_timeout=0;
    keepalive 8;
}

server {
    listen 80;
    server_name mia.gw.xhain.io;
    location /ws/ltc {
        proxy_pass http://mia-btc-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
