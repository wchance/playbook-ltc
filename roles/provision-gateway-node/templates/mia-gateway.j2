upstream mia-btc-node {
    least_conn;
    server 10.0.41.21:50003 fail_timeout=0;
    keepalive 8;
}

upstream mia-eth-node {
    least_conn;
    server 10.0.41.5:8546 fail_timeout=0;
    keepalive 8;
}

upstream mia-ltc-node {
    least_conn;
    server 10.0.41.23:50003 fail_timeout=0;
    keepalive 8;
}

upstream mia-matic-node {
    least_conn;
    server 10.0.41.6:8546 fail_timeout=0;
    keepalive 8;
}

server {
    listen 80;
    return 301 https://mia.gw.xhain.io$request_uri;
}

server {
    listen 443 ssl;
    server_name mia.gw.xhain.io;
    keepalive_timeout 70;

    ssl_certificate  /etc/nginx/ssl/ssl-cert-mia-gw.crt;
    ssl_certificate_key /etc/nginx/ssl/private/ssl-cert-mia-gw.key;

    location /ws/btc {
        rewrite /ws/btc/(.*) /$1  break;
        proxy_redirect off;
        proxy_pass http://mia-btc-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
        proxy_read_timeout 999999999;
    }

    location /ws/eth {
        rewrite /ws/eth/(.*) /$1  break;
        proxy_redirect off;
        proxy_pass http://mia-eth-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
        proxy_read_timeout 999999999;

        access_log /var/log/nginx/eth-upstream.log my_upstream;
    }

    location /ws/ltc {
        rewrite /ws/ltc/(.*) /$1  break;
        proxy_redirect off;
        proxy_pass http://mia-ltc-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
        proxy_read_timeout 999999999;
    }

    location /ws/matic {
        rewrite /ws/matic/(.*) /$1  break;
        proxy_redirect off;
        proxy_pass http://mia-matic-node;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
        proxy_read_timeout 999999999;
    }

}
