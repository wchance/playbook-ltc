server {
    listen 80;
    return 301 https://mon1.xhain.io$request_uri;
}

server {
    listen 443 ssl;
    server_name mon1.xhain.io;
    keepalive_timeout 70;

    ssl_certificate  /etc/letsencrypt/live/mon1.xhain.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mon1.xhain.io/privkey.pem;

    ssl_session_timeout 5m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers  HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    #####################
    #### HTTPS ROUTE ####
    #####################

    location /prometheus {

        # Authenticate
        auth_basic "Restricted Endpoint";
        auth_basic_user_file /etc/htconfig/prometheus_htpasswd;

        proxy_pass http://localhost:9090;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
    }

    location /grafana/ {

        proxy_pass http://localhost:3000/;
        proxy_set_header Host $http_host; 
    }
}